<!doctype html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
    <% include ../partials/header %>

    <div class="container" style="margin-top: 2rem; margin-bottom: 2rem">
        <h1 class="mb-4">Hasil Pencarian "<%= q %>"</h1>

        <% searchResults.forEach((resultRow, idx) => { %>
            <div class="card mb-2">
                <div class="card-body">
                    <p class="card-text"><%= resultRow.body_text %></p>
                    <a class="card-link" href="/lists/<%= resultRow.list_head_id %>#item<%= resultRow.position %>"><small><%= resultRow.list_head_name %> : <%= resultRow.position %></small></a>
                </div>
            </div>
        <% }) %>
    </div>

    <% include ../partials/footer %>
</body>

</html>